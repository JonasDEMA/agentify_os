# Company Research Agent - Environment Variables

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CoreSense IAM (Optional)
CORESENSE_URL=https://iam.meet-harmony.ai
CORESENSE_CLIENT_ID=your_client_id
CORESENSE_CLIENT_SECRET=your_client_secret

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Web Scraping Configuration
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_PERIOD=60
MIN_REQUEST_DELAY=1.0

# Excel Configuration
MAX_FILE_SIZE_MB=50

