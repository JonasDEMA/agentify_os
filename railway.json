{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install poetry && poetry install --only main --no-interaction --no-ansi"
  },
  "deploy": {
    "startCommand": "poetry run python -m server.main",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

