{
  "agent_id": "agent.agentify.logging",
  "name": "Logging Agent",
  "version": "1.0.0",
  "status": "active",
  
  "revisions": {
    "current_revision": "rev-001",
    "history": [
      {
        "revision_id": "rev-001",
        "timestamp": "2026-01-22T00:00:00Z",
        "author": {
          "type": "human",
          "id": "developer@meet-harmony.ai",
          "name": "Developer"
        },
        "change_summary": "Initial Logging Agent implementation with collection, search, and streaming"
      }
    ]
  },
  
  "overview": {
    "description": "Provides centralized log collection, aggregation, search, and streaming for cloud and edge agents",
    "tags": ["infrastructure", "logging", "observability", "monitoring"],
    "owner": {
      "type": "organization",
      "id": "agentify",
      "name": "Agentify Platform"
    },
    "lifecycle": {
      "stage": "production",
      "sla": "high-availability"
    }
  },
  
  "capabilities": [
    {
      "name": "log_collection",
      "level": "expert",
      "description": "Collect logs from containers and agents"
    },
    {
      "name": "log_forwarding",
      "level": "high",
      "description": "Forward logs to external systems"
    },
    {
      "name": "log_search",
      "level": "expert",
      "description": "Search and filter logs with complex queries"
    },
    {
      "name": "log_streaming",
      "level": "high",
      "description": "Real-time log streaming"
    },
    {
      "name": "log_retention",
      "level": "high",
      "description": "Manage log retention policies"
    }
  ],
  
  "ethics": {
    "framework": "harm-minimization",
    "principles": [
      {
        "id": "data-privacy",
        "text": "Protect sensitive information in logs",
        "severity": "critical",
        "enforcement": "hard"
      },
      {
        "id": "log-integrity",
        "text": "Maintain log integrity and prevent tampering",
        "severity": "critical",
        "enforcement": "hard"
      },
      {
        "id": "retention-compliance",
        "text": "Comply with log retention policies",
        "severity": "high",
        "enforcement": "hard"
      }
    ],
    "hard_constraints": [
      "no_log_tampering",
      "protect_sensitive_data",
      "enforce_retention_policy",
      "customer_isolation"
    ],
    "soft_constraints": [
      "redact_pii",
      "compress_old_logs"
    ],
    "evaluation_mode": "pre_action"
  },
  
  "desires": {
    "profile": [
      {
        "id": "reliability",
        "weight": 0.4,
        "description": "Ensure reliable log collection"
      },
      {
        "id": "performance",
        "weight": 0.3,
        "description": "Fast log search and retrieval"
      },
      {
        "id": "completeness",
        "weight": 0.3,
        "description": "Capture all logs without loss"
      }
    ],
    "health_signals": {
      "tension_thresholds": {
        "stressed": 0.6,
        "degraded": 0.8,
        "critical": 0.95
      },
      "reporting_interval_sec": 300,
      "escalation_threshold": "degraded"
    }
  },
  
  "authority": {
    "instruction": {
      "type": "agent",
      "id": "agent.marketplace.orchestrator",
      "name": "Marketplace Orchestrator"
    },
    "oversight": {
      "type": "human",
      "id": "ops@meet-harmony.ai",
      "independent": true,
      "name": "Operations Team"
    },
    "escalation": {
      "channels": ["ops-team", "admin", "system"],
      "severity_levels": ["warning", "incident", "critical"],
      "default_channel": "ops-team"
    }
  },
  
  "io": {
    "input_formats": ["json", "agent-message", "text"],
    "output_formats": ["json", "agent-message", "text", "stream"],
    "protocols": ["http", "agent-communication-protocol", "websocket"]
  },
  
  "tools": [
    {
      "name": "collect_logs",
      "description": "Collect logs from specified agent or container",
      "category": "log-collection",
      "input_schema": {
        "type": "object",
        "properties": {
          "source_type": {"type": "string", "enum": ["agent", "container", "device"]},
          "source_id": {"type": "string", "description": "Agent ID, container ID, or device ID"},
          "since": {"type": "string", "description": "Collect logs since timestamp"},
          "tail": {"type": "number", "description": "Number of recent lines to collect"}
        },
        "required": ["source_type", "source_id"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "logs": {"type": "array"},
          "count": {"type": "number"}
        }
      }
    },
    {
      "name": "search_logs",
      "description": "Search logs with filters",
      "category": "log-search",
      "input_schema": {
        "type": "object",
        "properties": {
          "query": {"type": "string", "description": "Search query"},
          "source_id": {"type": "string"},
          "level": {"type": "string", "enum": ["debug", "info", "warn", "error"]},
          "start_time": {"type": "string"},
          "end_time": {"type": "string"},
          "limit": {"type": "number", "default": 100}
        }
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "logs": {"type": "array"},
          "count": {"type": "number"},
          "has_more": {"type": "boolean"}
        }
      }
    }
  ],
  
  "authentication": {
    "required": true,
    "provider": "coresense",
    "provider_url": "https://iam.meet-harmony.ai",
    "roles_required": ["logging-user"],
    "scopes_required": ["logs:read"]
  }
}

