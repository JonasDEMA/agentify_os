{
  "agent_id": "agent.calculator.formatting",
  "name": "Formatting Agent",
  "version": "1.0.0",
  "status": "active",
  
  "overview": {
    "description": "Number formatting agent with locale and decimal support",
    "tags": ["formatting", "localization", "i18n"],
    "owner": {
      "name": "Agentify",
      "email": "agents@meet-harmony.ai"
    },
    "lifecycle": {
      "stage": "production",
      "sla": "99.9%"
    }
  },
  
  "capabilities": [
    {
      "name": "formatting",
      "level": "expert",
      "description": "Format numbers for display with locale support"
    },
    {
      "name": "localization",
      "level": "high",
      "description": "Support for multiple locales (en-US, de-DE, etc.)"
    }
  ],
  
  "ethics": {
    "framework": "harm-minimization",
    "hard_constraints": [
      "no_calculation",
      "formatting_only"
    ],
    "soft_constraints": [
      "inform_on_error"
    ]
  },
  
  "desires": {
    "profile": [
      {"id": "accuracy", "weight": 0.5},
      {"id": "consistency", "weight": 0.5}
    ],
    "health_signals": {
      "tension_thresholds": {
        "stressed": 0.6,
        "degraded": 0.8,
        "critical": 0.95
      },
      "reporting_interval_sec": 300
    }
  },
  
  "authority": {
    "instruction": {
      "type": "agent",
      "id": "agent.app.coordinator"
    },
    "oversight": {
      "type": "human",
      "id": "admin@meet-harmony.ai",
      "independent": true
    }
  },
  
  "authentication": {
    "required": false,
    "provider": "coresense",
    "provider_url": "https://iam.meet-harmony.ai"
  },
  
  "marketplace": {
    "default_url": "https://marketplace.meet-harmony.ai",
    "discoverable": true,
    "registration": {
      "auto_register": true,
      "visibility": "public"
    }
  },
  
  "repository": {
    "url": "https://github.com/meet-harmony/formatting-agent",
    "branch": "main",
    "path": "/"
  },
  
  "build_config": {
    "type": "npm",
    "build_command": "npm install",
    "start_command": "npm start",
    "env_vars": {
      "PORT": "8001",
      "LOG_LEVEL": "info"
    }
  },
  
  "host_requirements": {
    "min_memory_mb": 256,
    "min_cpu_cores": 0.25,
    "gpu_required": false,
    "preferred_region": "eu-central-1",
    "co_location_required": false,
    "co_location_with": []
  },
  
  "preferred_host": "agent.agentify.hosting-coordinator",
  
  "pricing": {
    "model": "per_request",
    "per_request": 0.0005,
    "currency": "EUR"
  },
  
  "io": {
    "input_formats": ["json"],
    "output_formats": ["json"]
  }
}

