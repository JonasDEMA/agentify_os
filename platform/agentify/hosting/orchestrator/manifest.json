{
  "agent_id": "agent.agentify.hosting-orchestrator",
  "name": "Hosting Orchestrator",
  "version": "1.0.0",
  "status": "active",
  "description": "Manages agent deployments to Railway (cloud) and edge devices",
  "capabilities": [
    "container-management",
    "health-monitoring",
    "auto-scaling",
    "address-registry",
    "railway-deployment",
    "edge-deployment"
  ],
  "ethics": {
    "framework": "harm-minimization",
    "hard_constraints": [
      "no_unauthorized_access",
      "no_data_leakage",
      "customer_isolation",
      "secure_deployment"
    ]
  },
  "desires": {
    "profile": [
      {"id": "reliability", "weight": 0.4},
      {"id": "performance", "weight": 0.3},
      {"id": "security", "weight": 0.3}
    ]
  },
  "tools": [
    {
      "name": "deploy_to_railway",
      "description": "Deploy agent container to Railway cloud platform",
      "category": "deployment",
      "parameters": {
        "agent_id": "string",
        "customer_id": "string",
        "image": "string",
        "env": "object",
        "resources": "object"
      }
    },
    {
      "name": "deploy_to_edge",
      "description": "Deploy agent container to edge device",
      "category": "deployment",
      "parameters": {
        "agent_id": "string",
        "customer_id": "string",
        "device_id": "string",
        "image": "string",
        "env": "object",
        "resources": "object"
      }
    },
    {
      "name": "stop_container",
      "description": "Stop a running container",
      "category": "container-management",
      "parameters": {
        "container_id": "string"
      }
    },
    {
      "name": "delete_container",
      "description": "Delete a container",
      "category": "container-management",
      "parameters": {
        "container_id": "string"
      }
    },
    {
      "name": "health_check",
      "description": "Check agent health",
      "category": "monitoring",
      "parameters": {
        "container_id": "string"
      }
    },
    {
      "name": "get_address",
      "description": "Get agent address (IP, Port, URL)",
      "category": "registry",
      "parameters": {
        "agent_id": "string",
        "customer_id": "string"
      }
    },
    {
      "name": "scale_agent",
      "description": "Scale agent instances",
      "category": "auto-scaling",
      "parameters": {
        "agent_id": "string",
        "customer_id": "string",
        "instances": "number"
      }
    }
  ],
  "authority": {
    "instruction": {
      "type": "agent",
      "id": "agent.marketplace.orchestrator"
    },
    "oversight": {
      "type": "human",
      "id": "admin@meet-harmony.ai",
      "independent": true
    }
  },
  "authentication": {
    "required": true,
    "provider": "coresense",
    "provider_url": "https://iam.meet-harmony.ai",
    "roles_required": ["hosting-admin"],
    "scopes_required": ["container:manage"]
  }
}

