# CPA Scheduler Configuration

# Application
APP_NAME=cpa-scheduler
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-secret-api-key-here

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Database
DATABASE_URL=sqlite:///./data/scheduler.db
DATABASE_ECHO=false

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=30

# LLM Provider
LLM_PROVIDER=openai
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Microsoft Graph API (for Mail Executor)
GRAPH_CLIENT_ID=your-client-id
GRAPH_CLIENT_SECRET=your-client-secret
GRAPH_TENANT_ID=your-tenant-id

# Playwright
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_SCREENSHOT_ON_ERROR=true

# Job Queue
JOB_QUEUE_MAX_RETRIES=3
JOB_QUEUE_RETRY_DELAY=5
JOB_QUEUE_DEAD_LETTER_TTL=86400

# Task Execution
TASK_DEFAULT_TIMEOUT=30
TASK_MAX_PARALLEL=5

# Security
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Rate Limiting
RATE_LIMIT_PER_IP=100/minute
RATE_LIMIT_PER_API_KEY=1000/minute

# Observability
OTEL_ENABLED=true
OTEL_SERVICE_NAME=cpa-scheduler
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_TRACES_SAMPLER=always_on

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Audit
AUDIT_ENABLED=true
AUDIT_SCREENSHOT_ENABLED=true
AUDIT_RETENTION_DAYS=90

# Policies
POLICY_APP_ALLOWLIST=chrome,firefox,outlook,datev,excel,word
POLICY_ACTION_BLACKLIST=delete_file,run_command,shutdown
POLICY_PII_DETECTION_ENABLED=true

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

