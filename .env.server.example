# CPA Server Configuration

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS (for Lovable UI)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "https://your-lovable-ui.vercel.app"]

# Database
DATABASE_URL=sqlite+aiosqlite:///./cpa_server.db

# Storage
UPLOAD_DIR=./uploads
SCREENSHOT_DIR=./uploads/screenshots

# Security
SECRET_KEY=your-secret-key-change-in-production-use-random-string
API_KEY_LENGTH=64

# Agent
AGENT_TIMEOUT_SECONDS=300

