# Dockerfile for CPA Server (Railway Deployment)

FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install Poetry
RUN curl -sSL https://install.python-poetry.org | python3 -
ENV PATH="/root/.local/bin:$PATH"

# Set working directory
WORKDIR /app

# Copy dependency files and minimal structure
COPY pyproject.toml poetry.lock* README.md ./

# Create minimal package structure for Poetry
RUN mkdir -p scheduler agents/desktop_rpa

# Install dependencies (production only)
RUN poetry config virtualenvs.create false \
    && poetry install --only main --no-interaction --no-ansi

# Copy application code
COPY server/ ./server/
COPY agents/desktop_rpa/ ./agents/desktop_rpa/

# Create necessary directories
RUN mkdir -p /app/uploads/screenshots /app/data

# Expose port (Railway sets PORT env var)
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:${PORT:-8000}/health || exit 1

# Run server
CMD poetry run python -m server.main

